{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "no-console": false,
    "quotemark": [true, "single", "avoidEscape"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "typedef": [true, "call-signature", "property-declaration", "variable-declaration"],
    "semicolon": [true, "always"],
    "variable-name": {
      "options": [
        "allow-leading-underscore"
      ]
    }
  }
}
